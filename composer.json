{
    "name": "erikmitchell/bc-migration",
    "description": "Tools for helping with various Boomi CMS migrations",
    "type": "boomi-cms-plugin",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "erikdmitchell\\bcmigration\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Erik Mitchell",
            "email": "erikdmitchell@gmail.com"
        }
    ],
    "require": {
		"squizlabs/php_codesniffer": "3.*",
		"wp-coding-standards/wpcs": "^3.0",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
		"phpcompatibility/php-compatibility": "*",
		"phpstan/phpstan": "^1.8",
		"szepeviktor/phpstan-wordpress": "^1.0",
		"phpstan/extension-installer": "^1.1",
		"php-stubs/acf-pro-stubs": "^5.10",
		"php-stubs/wp-cli-stubs": "^2.5",
		"phpmd/phpmd": "@stable"        
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    }
}

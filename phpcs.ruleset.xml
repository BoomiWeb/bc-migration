<?xml version="1.0"?>
<ruleset name="BC Migration Ruleset">
    <description>BC Migration Ruleset</description>

    <!-- Include paths -->
    <file>src</file>

    <!-- Show progress, show the error codes for each message (source). -->
    <arg value="ps" />

    <!-- Strip the filepaths in reports down to the relevant bit. -->
    <arg name="basepath" value="./" />

    <!-- Check up to 8 files simultaneously. -->
    <arg name="parallel" value="8" />

    <!-- Configs -->
    <config name="minimum_supported_wp_version" value="6.7" />
    <config name="testVersion" value="8.0-" />

    <!-- PHP Compatibility for WordPress -->
    <rule ref="PHPCompatibilityWP">
        <properties>
            <property name="testVersion" value="8.0-" />
        </properties>
    </rule>

    <!-- WordPress Coding Standards -->
    <rule ref="WordPress" />

    <!-- Text Domain Checking -->
    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array" value="bc-migration" />
        </properties>
    </rule>
</ruleset>